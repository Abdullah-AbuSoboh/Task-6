<odoo>
  <record id="view_membership_request_tree" model="ir.ui.view">
    <field name="name">library.membership.request.list</field>
    <field name="model">library.membership.request</field>
    <field name="arch" type="xml">
      <list string="Membership Requests">
        <field name="member_id"/>
        <field name="registration_date"/>
        <field name="end_date"/>
        <field name="state"/>
      </list>
    </field>
  </record>
  <record id="view_membership_request_form" model="ir.ui.view">
    <field name="name">library.membership.request.form</field>
    <field name="model">library.membership.request</field>
    <field name="arch" type="xml">
      <form string="Membership Request">
        <header>
          <!-- Confirm button (only in draft) -->
          <button name="action_confirm" type="object" string="Confirm"
            class="btn-primary"
            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
          <!-- Mark as Paid button (only in confirmed) -->
          <button name="action_mark_paid" type="object" string="Mark as Paid"
            class="btn-success"
            modifiers="{'invisible': [('state', '!=', 'confirmed')]}"/>
          <!-- Activate button (only in paid) -->
          <button name="action_activate" type="object" string="Activate"
            class="btn-secondary"
            modifiers="{'invisible': [('state', '!=', 'paid')]}"/>
          <button name="library_management.action_report_membership_single"
            
            string="Print Membership Report"
            type="action"
            class="btn-primary"
            context="{'lang': 'ar_001'}"/>
          <!-- Statusbar -->
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="member_id"/>
            <field name="registration_date"/>
            <field name="end_date"/>
          </group>
          <group>
            <field name="card_id" readonly="1"/>
            <field name="payment_term_id"/>
            <field name="invoice_id" readonly="1"/>
          </group>
          <notebook>
            <page string="Membership Lines">
              <field name="line_ids">
                <list editable="bottom">
                  <field name="product_id"/>
                  <field name="amount"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
