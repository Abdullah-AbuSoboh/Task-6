<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_list_author" model="ir.ui.view">
        <field name="name">library.author.list</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <list string="Authors">
                <field name="name"/>
                <field name="biography"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_form_author" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="biography"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_authors" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Library" sequence="10"/>
    <menuitem id="menu_library_authors" name="Authors" parent="menu_library_root" action="action_library_authors"/>
</odoo>

